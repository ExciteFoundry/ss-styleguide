<figure class="range-banner text-center mb-6">
  <a href="/">
    <picture class="embed-responsive bg-shimmer">
      <source srcset="https://via.placeholder.com/2880x680" media="(min-width: 992px)"/>
      <source srcset="https://via.placeholder.com/828x656"/>
      <img class="embed-responsive-item fit--cover" src="https://via.placeholder.com/828x656"/>
    </picture>
  </a>
  <figcaption class="position-relative px-g d-inline-block mt-n6">
    <p class="h1 m-0 {{padding}} text-white text-center {{background}}">{{title}}</p>
  </figcaption>
</figure>
