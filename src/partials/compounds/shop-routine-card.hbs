<figure class="product-card--routine col-12 col-lg-3 d-lg-flex flex-lg-column flex-grow-1 justify-content-lg-between {{ carousel }} mb-3 mb-lg-0">
    <div class="row px-lg-g d-lg-flex flex-lg-column flex-grow-1">
        <a href="/" class="col-auto px-lg-0">
            <picture>
                <source srcset="https://via.placeholder.com/444x558" media="(min-width: 992px)">
                <img src="https://via.placeholder.com/101x117" alt="Placeholder" class="d-block w-100">
            </picture>
        </a>
        <figcaption class="product-card--routine__content col-auto p-lg-g d-lg-flex flex-lg-column flex-grow-1">
            <p class="product-card--routine__range text-gray-500 mb-0 mb-1 mb-lg-2">{{range}}</p>
            <a href="/" class="product-card--routine__title d-inline-block text-body h4 mb-2">
                {{title}}
            </a>
            <div class="mb-3 flex-grow-1 align-items-center d-none d-lg-flex">
                {{!-- DEV --}}
                <div class="react-yotpo-star" data-product-id="4633315409991" data-hide-stars="true"></div>
                {{!-- US --}}
                {{!-- <div class="react-yotpo-star" data-product-id="3595105992809" data-hide-stars="true"></div> --}}
            </div>
            <p class="d-lg-none text-left mb-1 mb-lg-2">
                {{#if compare_price }}<span class="text-linethrough mr-1">{{compare_price}}</span>{{/if}}<span class="font-weight-bold my-1">{{price}}</span>
            </p>
            <button type="button" class="btn px-4 px-lg-3 add-to-cart px-0 btn-primary mb-0 justify-content-center justify-content-lg-between align-items-lg-center d-lg-flex">
                <span class="d-flex align-items-center justify-content-center">Add To Cart</span>
                <span class="d-none d-lg-flex">
                    {{#if compare_price }}<span class="font-size-base text-linethrough mr-1 font-weight-normal">{{compare_price}}</span>{{/if}}
                    <span class="font-size-base text-white">{{price}}</span>
                </span>
            </button>
        </figcaption>
    </div>
</figure>
