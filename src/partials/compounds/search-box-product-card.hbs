<figure class="product-card product-card--search-result position-relative col-12 col-lg-2 d-flex flex-lg-column {{ class }}">
	<a href="" class="col-3 col-lg-12 pl-0 px-lg-0 flex-lg-fill">
		<picture class="d-block">
			<img src="https://via.placeholder.com/444x558{{# if color}}/{{ color }}/fff{{/if}}" alt="Placeholder" class="d-block w-100">
		</picture>
	</a>
	<figcaption class="mt-2 flex-grow-1 d-flex flex-column">
		<form class="product-card-form flex-grow-1 d-flex flex-column h-100">
			<input type="hidden" name="id" value="variantId" />
			<input type="hidden" name="quantity" value="1" />
			{{# if badge}}<span class="badge badge-light position-absolute font-weight-normal">{{ badge }}</span>{{/if}}
			<p class="product-card__text-sm mb-2 text-muted link-secondary">Tasmanian Spring Water</p>
			<a href="#" class="product-card__text mb-2 font-weight-bold text-body link-secondary">{{# if title}}{{ title }}{{ else }}Hydration Boost Cream{{/if}}</a>
		</form>
	</figcaption>
</figure>
