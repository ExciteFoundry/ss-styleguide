<div class="product-card position-relative {{#unless home-range-section}}col-6{{/unless}} {{#if range_page}}{{range_page_classes}}{{else}}{{#if home-range-section}}{{else}}col-lg-3{{/if}}{{/if}} d-flex flex-column pb-2 {{ class }}">
    <figure class="bg-gray-100 rounded-lg">
        <a href="">
            <noscript class="loading-lazy">
            <picture class="embed-responsive bg-shimmer">
                <img src="https://via.placeholder.com/444x558{{# if color}}/{{ color }}/fff{{/if}}" alt="Placeholder" class="d-block w-100 embed-responsive-item fit--cover" loading="lazy">
                <img src="https://via.placeholder.com/444x558" alt="Secondary Image" class="img--hover w-100 embed-responsive-item fit--cover" loading="lazy">
            </picture>
            </noscript>

            {{# if badgeimg}}
            <noscript class="loading-lazy">
            <picture class="badge--image position-absolute">
                <img class="w-100" src="https://cdn.shopify.com/s/files/1/0277/5262/8295/files/SS_Web_HalloweenCampaign_Stickere_-01.svg?v=1635211464" alt="">
            </picture>
            </noscript>
            {{/if}}
        </a>
        <figcaption class="mt-2 flex-grow-1 d-flex flex-column p-g product-card__content">
            <form class="product-card-form flex-grow-1 d-flex flex-column h-100">
                <input type="hidden" name="id" value="variantId" />
                <input type="hidden" name="quantity" value="1" />
                {{# if badge}}<span class="badge badge-light position-absolute font-weight-normal">{{ badge }}</span>{{/if}}
                <p class="product-card__text font-size-sm mb-2 text-muted">Tasmanian Spring Water</p>
                <a class="text-decoration-none mb-2 font-weight-bold">{{# if title}}{{ title }}{{ else }}Hydration Boost Cream{{/if}}</a>

                <div class="mb-1 flex-grow-1 align-items-center">
                    {{!-- DEV --}}
                    <div class="react-yotpo-star" data-product-id="4633315409991" data-hide-stars="true"></div>
                    {{!-- US --}}
                    {{!-- <div class="react-yotpo-star" data-product-id="3595105992809" data-hide-stars="true"></div> --}}
                </div>
                <button type="button" class="mt-3 btn btn-primary rounded-pill d-flex p-0 align-items-center product-card__btn font-size-base  border bg-white">
			        <span class="d-inline-block w-50 bg-white rounded-pill-left border-right">
			            <span class="text-gray-500 mr-lg-1 text-linethrough font-weight-normal {{#if collection}}product-card__btn-price{{/if}}">$39</span>
			            <span class="text-body {{#if collection}}product-card__btn-price{{/if}}">$39</span>
			        </span>
			        <span class="d-inline-block w-50 text-white font-size-sm rounded-pill-right py-2 bg-primary border border-primary">Add to Cart</span>
			    </button>
            </form>
        </figcaption>
    </figure>
</div>
