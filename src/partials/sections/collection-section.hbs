<div class="collection-section container px-g {{ class }}">
	<div class="collection-section__header d-flex align-items-start mb-3">
		<img class="svg mr-2 mr-lg-3 mt-lg-1 text-{{#if (eq range 'apc')}}secondary{{else}}{{range}}{{/if}}" src="icons/range-{{range}}.svg" replace-to-svg />
		<h2 class="h1 flex-grow-1 mb-0">{{ header }}</h2>
		<a href="" class="btn btn-lg btn-outline-primary d-none d-lg-block">{{ button }}</a>
	</div>
	<h4 class="collection-section__subtitle d-none flex-grow-1 mb-3 ml-auto text-{{#if (eq range 'apc')}}secondary{{else}}{{range}}{{/if}}">{{ subtitle }}</h4>

	<div class="row">
		<div class="collection-section__cover d-none d-lg-block col-lg-3">
			<noscript class="loading-lazy">
				<picture class="embed-responsive">
					<img src="https://via.placeholder.com/900x522/" alt="Placeholder" class="d-block w-100 embed-responsive-item fit--cover" loading="lazy">
				</picture>
				<img src="{{ imageUrl }}/decor-range-{{ range }}.svg" alt="Decor" class="mt-n3" loading="lazy">
			</noscript>
		</div>

		{{#> sections/carousel-scroll id=range class="container px-hg mb-5 my-lg-0 col-lg-9 featured-products-carousel" no-scrollbar="true" home-range-section="true" controlclass="d-none" }}
			{{> compounds/product-card class="carousel-item col-8 col-lg-4 mb-3" color=color home-range-section="true"}}
			{{> compounds/product-card class="carousel-item col-8 col-lg-4 mb-3" title="Hydration Boost Cream Moisturiser (2 lines)" color=color home-range-section="true"}}
			{{> compounds/product-card class="carousel-item col-8 col-lg-4 mb-3" color=color home-range-section="true"}}
			{{> compounds/product-card class="carousel-item col-8 col-lg-4 mb-3 d-lg-none" color=color home-range-section="true"}}
		{{/ sections/carousel-scroll}}
	</div>

	<hr>
</div>
