<div {{#if id}}id="{{ id }}"{{/if}} class="{{#if range-section}}{{else}}container{{/if}} {{#if (eq id 'search-products')}}{{else}}{{#unless home-carousel}}px-g{{/unless}}{{/if}} {{ class }}">
	{{#if home-range-section }}
	{{else}}
		{{#if header}}
		<div class="d-flex justify-content-between align-items-start mb-0 {{collectionSection}}">
			<h2 class="h1 mb-0">{{ header }}</h2>
			{{#if button}}
			<button class="btn btn-lg btn-outline-primary d-none d-lg-block">{{ button }}</button>
			{{/if}}
		</div>
		{{/if}}
	{{/if}}


	<div class="carousel--scroll position-relative" {{#if home-carousel}}{{#if id}}id="{{ id }}"{{/if}}{{/if}}>
		<div class="carousel-inner d-flex flex-nowrap row w-auto {{#if home-range-section}}{{else}}pt-3 pt-lg-4{{/if}}" role="listbox">
			{{#if @partial-block}}{{> @partial-block }}{{/if}}
		</div>
		{{#if no-scrollbar}}
		{{else}}
		<div class="scrollbar mt-3">
			<div class="scrollbar--thumb"></div>
		</div>
		{{/if}}

		<a class="{{prevControlclass}} {{controlclass}} carousel-control-prev {{#if (eq id 'search-products')}}carousel-control-prev--always-show disabled{{else}}d-none{{/if}} text-body ml-ng {{#if home-range-section}}d-lg-none{{else}}{{/if}}" role="button">
			<span
				class="carousel-control-prev-icon carousel-control--background {{#if (eq id 'search-products')}}carousel-control--transparent{{else}}{{/if}} d-flex justify-content-center align-items-center"
				aria-hidden="true">
				<img class="svg" src="icons/chevron-prev.svg" replace-to-svg />
			</span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="{{nextControlclass}} {{controlclass}} carousel-control-next {{#if (eq id 'search-products')}}carousel-control-prev--always-show{{else}}{{/if}} text-body mr-ng  {{#if home-range-section}}d-lg-none{{else}}{{/if}}" role="button">
			<span
				class="carousel-control-next-icon carousel-control--background {{#if (eq id 'search-products')}}carousel-control--transparent{{else}}{{/if}} d-flex justify-content-center align-items-center"
				aria-hidden="true">
				<img class="svg" src="icons/chevron-next.svg" replace-to-svg />
			</span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	{{#if button}}
	<div class="d-flex justify-content-center d-lg-none mt-4">
		<button class="btn btn-lg btn-outline-primary">{{ button }}</button>
	</div>
	{{/if}}
</div>
