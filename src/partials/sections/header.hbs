<header class="main-header bg-white">
	{{#if cookiebanner}}
	{{> components/cookies-banner }}
	{{/if}}
	{{> components/announcement-bar }}
	<nav class="navbar navbar-expand-lg px-g">
		<div class="container">
			<button class="navbar-toggler" type="button">
				<span class="d-block"></span>
			</button>
			<ul class="navbar-nav align-items-center d-none d-lg-flex">
				<li class="nav-item">
					<a href="#" class="nav-link m-0 pl-0">About Us</a>
				</li>
				<li class="nav-item">
					<a href="#" class="nav-link m-0">Rewards</a>
				</li>
				<li class="nav-item">
					<a href="#" class="nav-link m-0">Blog</a>
				</li>
				<li class="nav-item">
					<a href="#" class="nav-link m-0">Waitlist & Win</a>
				</li>
			</ul>

			<a href="#" class="navbar-brand mx-auto">
				<img class="svg" src="icons/logo-ss.svg" replace-to-svg />
			</a>
			<ul class="navbar-nav d-lg-flex justify-content-end flex-row">
				<li class="nav-item d-none d-lg-block">
					<a class="nav-link m-0" href="#" data-cy="tracking-order">Track My Order</a>
				</li>
				<li class="nav-item d-none d-lg-block">
					<div class="dropdown dropdown--onhover">
						<a class="dropdown-toggle m-0 nav-link d-flex align-items-baseline" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							US (USD)
							<img class="svg font-size-xs ml-1" src="icons/chevron-down.svg" replace-to-svg />
						</a>
						<div class="dropdown-menu border-0 p-0 text-right pt-2 pb-2 overflow-hidden d-block" aria-labelledby="dropdownMenuLink">
							{{#unless critical}}
							<a class="dropdown-item pt-2 pb-2 pr-5" href="#">United Kingdom (GBP)</a>
							<a class="dropdown-item pt-2 pb-2 pr-5 active" href="#">USA (USD)</a>
							<a class="dropdown-item pt-2 pb-2 pr-5" href="#">Canada (CAD)</a>
							<a class="dropdown-item pt-2 pb-2 pr-5" href="#">Australia (AUD)</a>
							<a class="dropdown-item pt-2 pb-2 pr-5" href="#">Europe (EUR)</a>
							<a class="dropdown-item pt-2 pb-2 pr-5" href="#">Malaysia (MYR)</a>
							<a class="dropdown-item pt-2 pb-2 pr-5" href="#">Rest of the World (SGD)</a>
							{{/unless}}
						</div>
					</div>
				</li>
				<li class="nav-item">
					<a href="#" class="nav-link h4 m-0 d-flex search-box__open"><img class="svg nav-link__icon" src="icons/search.svg" replace-to-svg /></a>
				</li>
				<li id="dropdownMenuForm" class="nav-item dropdown dropdown--account pl-sm-2 pl-lg-0">
					<a href="#" class="nav-link h4 m-0 d-flex dropdown-toggle" role="button" id="dropdownMenuUser" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<img class="svg nav-link__icon" src="icons/user.svg" replace-to-svg />
					</a>
					<div class="dropdown-menu border-0 rounded-0 pt-lg-g pb-0 d-block mt-sm-6 mt-lg-0" aria-labelledby="dropdownMenuUser">
						<form id="dropdown__login" class="p-g shadow collapse show" data-parent="#dropdownMenuForm">
							<p class="font-weight-bold text-center px-2 mb-3">Earn and redeem points from purchases</p>
							<div class="form-group">
								<input type="email" class="form-control font-size-sm" id="dropdownLoginFormEmail" placeholder="Email">
							</div>
							<div class="form-group mt-2">
								<input type="password" class="form-control font-size-sm" id="dropdownLoginFormPassword" placeholder="Password">
							</div>
							<button type="submit" class="btn btn-primary btn-block mt-3 mb-0">Log In</button>
							<div class="form-group font-size-sm d-flex justify-content-between mt-3">
								<a href="#" class="text-underline text-primary">Forgot your password?</a>
								<a href="#dropdown__register" class="text-underline text-primary" data-toggle="collapse">Register Account</a>
							</div>
						</form>
						<form id="dropdown__register" class="px-3 py-g shadow collapse" data-parent="#dropdownMenuForm">
							<p class="font-weight-bold text-center mb-3">Get 50 bonus points and an exclusive welcome offer</p>
							<div class="row">
								<div class="form-group col-6 pr-1">
									<input type="text" class="form-control font-size-sm" id="dropdownFormFName" placeholder="First Name">
								</div>
								<div class="form-group col-6 pl-1">
									<input type="text" class="form-control font-size-sm" id="dropdownRegisterFormLName" placeholder="Last Name">
								</div>
								<div class="form-group col-12 mt-2">
									<input type="email" class="form-control font-size-sm" id="dropdownRegisterFormEmail" placeholder="Email">
								</div>
								<div class="form-group col-12 mt-2">
									<input type="text" class="form-control font-size-sm" id="dropdownRegisterFormPassword" placeholder="Password">
								</div>
							</div>
							<div class="custom-control custom-checkbox d-flex justify-content-start mt-2">
								<input type="checkbox" name="agreement" value="true" class="custom-control-input" id="agreement" required="" aria-required="true" aria-invalid="true">
								<label class="custom-control-label font-size-xs" for="agreement">
									By clicking here, I agree to the <a href="/pages/term-condition" class="text-body font-weight-bold">Terms of Use</a> and <a href="/pages/privacy-policy" class="text-body font-weight-bold">Privacy Policy</a>
								</label>
							</div>
							<div class="custom-control custom-checkbox d-flex justify-content-start mt-2">
								<input type="checkbox" name="customer[accepts_marketing]" class="custom-control-input pristine" value="true" id="accept-marketing" checked="">
								<label class="custom-control-label font-size-xs" for="accept-marketing">Sign up for exclusive presales, skincare tips, and promotions.</label>
							</div>
							<button type="submit" class="btn btn-primary btn-block mt-g">Create Account</button>
							<div class="form-group font-size-xs text-center mt-2">
								<a href="#dropdown__login" class="text-underline text-primary" data-toggle="collapse">Back to login</a>
							</div>
						</form>
					</div>
				</li>

				<li class="nav-item pl-2 pl-lg-2">
					<a href="#" class="nav-link h4 m-0 d-flex font-weight-normal position-relative px-0" data-toggle="modal" data-target="#cart-drawer" role="button" data-cy="cart-icon">
						<img class="svg nav-link__icon" src="icons/cart.svg" replace-to-svg />
						<span class="cart-drawer__count text-primary d-block w-100 text-center">0</span>
					</a>
				</li>
			</ul>

		</div>
	</nav>
	{{> compounds/mobile-menu}}
	{{> compounds/mobile-menu-abtest}}
	{{> compounds/search-box}}

	{{#if blognav}}
	{{> compounds/blog-nav}}
	{{/if}}

	{{#if secondnav}}
	{{> compounds/secondary-nav gridclass="px-0"}}
	{{/if}}

	{{#unless hideCategoryNav}}
	{{> compounds/nav-category}}
	{{/unless}}

	{{> components/tooltip}}
</header>

{{> sections/cart-drawer}}

{{!-- Adding this to include bg-shimmer related classes in critical css --}}
{{#if critical}}
<div class="d-none embed-responsive bg-shimmer"><img class="embed-responsive-item fit--cover" /></div>
{{/if}}
